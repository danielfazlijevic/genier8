{
    "compilerOptions": {
	"extends": "@tsconfig/svelte/tsconfig.json",
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "~/*": ["./src/*"]
        }
    },
    "exclude": ["node_modules", "dist"]
}
